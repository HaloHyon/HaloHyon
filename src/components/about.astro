---
import {
  BackgroundImage,
} from "astro-imagetools/components";

import IconCards from "./icon-cards.astro";
---

<section
  id={"about"}
  class="py-16"
>
  <div class="py-6">
    <BackgroundImage
      src="src/assets/abstraction3.png"
    >
      <nav class="scroll-mt-24 flex-row items-center gap-4 py-8 px-6 sm:flex hidden">
        <div> 
          <p
            class="font-extrabold px-6 tracking-tight text-6xl highlight-title"
          >
            Solusi Halu Terlengkap
          </p>
          <p
            class="font-extrabold px-6 tracking-tight text-m highlight-title"
          >
            Zatsudan, story based game, consensual kidnapping, roleplay, art streams,
            Semua ada di HaloHyon!
          </p>
          <div class="scroll-mt-24 flex-row items-center gap-4 py-8 px-6 sm:flex hidden">
            <IconCards title="Fanarts" class="flex"/>
            <IconCards title="Clips" class="flex"/>
            <IconCards title="Fics" class="flex"/>
            <IconCards title="Etc" class="flex"/>
          </div>
        </div>
        <div class="flex flex-col basis-1/3 items-center gap-4">
          <p
            class="text-center font-extrabold tracking-tight text-6xl highlight-title"
          >
            IMAGE PLACEHOLDER
          </p>
        </div>
      </nav>
    </BackgroundImage>
  </div>
</section>
