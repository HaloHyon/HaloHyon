---
import {
  BackgroundImage,
} from "astro-imagetools/components";
import icon1 from "~/assets/website-assets/chibi-icons/icon1.png"
import icon2 from "~/assets/website-assets/chibi-icons/icon2.png"
import icon3 from "~/assets/website-assets/chibi-icons/icon3.png"
import icon4 from "~/assets/website-assets/chibi-icons/icon4.png"
import icon5 from "~/assets/website-assets/chibi-icons/icon5.png"
import hyonaHappy from "~/assets/website-assets/HyonHappy.png"


import IconCards from "./icon-cards.astro";
---

<section
  id={"about"}
  class="py-16"
>
  <div class="py-6">
    <BackgroundImage
      src="src/assets/abstraction3.png"
    >
      <nav class="scroll-mt-24 flex-row items-center gap-4 px-6 sm:flex hidden">
        <div> 
          <p
            class="px-6 tracking-tight text-6xl highlight-title"
          >
            Solusi Halu Terlengkap
          </p>
          <p
            class="px-6 tracking-tight text-m highlight-title"
          >
          Chat with Panther doc, visit the clinic, recap lab check, read newest article, buy hyonamin, everything can be done at HaloHyon !
          </p>
          <div class="scroll-mt-24 flex-row items-center gap-4 py-8 px-6 sm:flex hidden">
            <IconCards img={icon1.src} title="Message" class="flex" link="#message"/>
            <IconCards img={icon2.src} title="Illusts" class="flex" link="#illust"/>
            <IconCards img={icon3.src} title="Stories" class="flex" link="#articles"/>
            <IconCards img={icon4.src} title="Clinix" link="#decor" class="flex"/>
            <IconCards img={icon5.src} title="Clips" link="#videos" class="flex"/>
          </div>
        </div>
        <div class="flex flex-col basis-1/3 items-center gap-4">
          <img class="rounded-t-lg" src={hyonaHappy.src} alt="" />
        </div>
      </nav>
    </BackgroundImage>
  </div>
</section>
