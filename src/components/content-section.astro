---
export interface Props {
  id: string;
  title?: string;
}

const { id, title } = Astro.props;
---

<section
  id={id}
  class="flex scroll-mt-24 flex-col items-center"
>
  <div class="flex flex-col items-center">
    <slot name="eyebrow" />
    {
      title &&
      <h2
        class="text-center tracking-tight text-3xl highlight-title mx-10"
      >
        {title}
      </h2>
    }
  </div>
  <p class="max-w-6xl text-center text-xl flex-col">
    <slot name="lead" />
  </p>
  <slot />
</section>
